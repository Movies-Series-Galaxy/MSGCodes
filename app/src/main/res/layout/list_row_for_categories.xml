<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#121212">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewOfCategoriePicId"
        android:layout_width="87dp"
        android:layout_height="87dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="#FF002E">

        <ImageView
            android:visibility="gone"
            android:id="@+id/categoriePictureId"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_gravity="center" />

        <ImageView
            android:id="@+id/categorieLoadingIconId"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_gravity="center"
            android:background="#F0F3F8"
            android:src="@drawable/categorie_loading_icon" />
    </androidx.cardview.widget.CardView>


</RelativeLayout>